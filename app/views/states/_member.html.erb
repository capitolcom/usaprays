<div class="well">
<h2 class="page-header member-name">
  <%= member.name %>
  <small><%= member[:title] %></small>
</h2>
  <div class="row">
    <div class="span3">
      <%= image_tag member.photo_src, class: 'head-shot', style: "padding:0 1em 1em 0" %>
      <div style="padding-left:0em">
        <h3>Connect</h3>
        <div style="padding:0.5em">
        <ul class="unstyled">
          <%= content_tag('li', link_to("Website", member.website)) unless member.website.blank? %>
          <%= content_tag('li', link_to("Contact Form", member[:webform])) unless member[:webform].blank? %>
          <%= content_tag('li', link_to("Facebook", member.facebook)) unless member.facebook.blank? %>
          <%= content_tag('li', link_to("Email", "mailto: #{member.email}")) unless member.email.blank? %>
          <%= content_tag('li', link_to("Twitter", "https://twitter.com/#{member.twitter}")) unless member[:twitter].blank? %>
        </ul>
        </div>
      </div>
    </div>
    <div class="span8">
      <h3>Profile</h3>
      <table class="table table-striped table-bordered table-condensed">
        <%= member_data_tr member[:legal_name], "Legal name" %>
        <%= member_data_tr member[:district], "District" %>
        <%= member_data_tr member[:religion], "Religion" %>
        <%= member_data_tr member.family_info, "Family" %>
        <%= member_data_tr member.born, "Birthday" %>
        <%= member_data_tr(member.school, "Degrees") %>
        <%= member_data_tr member.military, "Military" %>
        <%= member_data_tr member[:residence], "Current residence" %>
        <%= member_data_tr member.mailing_address, "Mailing address" %>
      </table>
<%# unless member[:biography].blank? %>
<% if false %>
  <div class="biography">
    <h3>More Information</h3>
    <div class="well" style="padding:0.5em">
    <%= simple_format member[:biography] %>
    </div>
  </div>
  <%#= debug member %>
<% end %>
    </div>
  </div>
</div>
