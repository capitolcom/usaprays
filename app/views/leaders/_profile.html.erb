<div class="well">

  <div class="row-fluid">
    <div class="span5">
      <%= image_tag leader.photo_src, class: '' %>
    </div>

    <div class="span7">

      <h3 class="leader-name"><%= leader.name.strip %></h3>
      <h3><small><%= leader.title.strip %></small></h3>

      <% unless leader.district_residence.blank? %>
        <p>
        <h6>District</h6>
        <%= leader.district_residence %>
        </p>
        <p>
      <% end %>

      <% unless leader.spouse.blank? %>
        <h6>Spouse</h6>
        <%= leader.spouse %>
        </p>
      <% end %>
    </div>

    <%= glyph_link_to('329_web_browser', leader.website) %>
    <%= glyph_link_to('309_comments', leader.webform) %>
    <%= glyph_link_to('399_e-mail', 'mailto:'+leader.email) %>
    <%= glyph_link_to('391_twitter_t', leader.twitter) %>
    <%= glyph_link_to('390_facebook', leader.facebookk) %>

  </div>
</div>
