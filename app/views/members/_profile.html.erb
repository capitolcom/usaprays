<div class="well">
  <div class="row-fluid">

    <div class="span3">
      <%= image_tag member.photo_src, class: 'head-shot' %>
      <h2 class="member-name visible-phone" style="margin-top:0.25em">
        <%= member.name %> <small><%= member.title.strip %></small>
      </h2>
    </div>

    <div class="span9">
      <h2 class="member-name hidden-phone">
        <%= member.name.strip %> <small><%= member.title.strip %></small>
      </h2>
      <div class="row-fluid">
        <div class="span8">
          <table class="table table-striped table-bordered table-condensed">
            <%= member_data_tr member.district_residence, "District" %>
            <%= member_data_tr member.religion, "Religion" %>
            <%= member_data_tr member.spouse, "Spouse" %>
            <%= member_data_tr member.family, "Family" %>
            <%= member_data_tr member.birthday, "Birthday" %>
          </table>
        </div>
        <div class="span3" style="padding-left:0.75em">
          <br />
          <div style="text-align:right;padding-left:0.5em">
            <ul class="unstyled">
              <%= content_tag('li', link_to("Website", member.website)) unless member.website.blank? %>
              <%= content_tag('li', link_to("Contact Form", member[:webform])) unless member[:webform].blank? %>
              <%= content_tag('li', link_to("Facebook", member.facebook)) unless member.facebook.blank? %>
              <%= content_tag('li', link_to("Email", "mailto: #{member.email}")) unless member.email.blank? %>
              <%= content_tag('li', link_to("Twitter", "https://twitter.com/#{member.twitter}")) unless member[:twitter].blank? %>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
