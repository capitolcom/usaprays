<% content_for :title do %>
  <%= @state.name %>
<% end %>

<h2 style="margin:1em"><%= @segment.public_name %></h2>


<%= simple_form_for @subscription, 
  url: "/states/#{@state.to_param}/subscriptions", 
html: { class: 'well form-horizontal' } do |f| %>
<h3>Sign Up</h3>
<p>
The <%= @segment.public_name %> contains one Federal and five State leaders along
with some basic public information that will help you more effectively pray.</p>
<% if params[:id] == "daily" %>
  <p>It is sent out once per day.</p>
<% else %>
  <p>It is sent out once per week.</p>
<% end %>
<p>Please enter your name and email address to join us.</p>
<br />
<%= f.input :name, input_html: {class: "xlarge"} %>
<%= f.input :email, input_html: {class: "xlarge"} %>
<%= f.input :address, input_html: {class: "xlarge"} %>
<%= f.input :city, input_html: {class: "xlarge"} %>
<%= f.input :state, input_html: {class: "xlarge"} %>
<%= f.input :zipcode, input_html: {class: "xlarge"} %>
<%= f.input :cycle, as: :hidden %>
<%= f.input :state_code, as: :hidden %>
<div class="form-actions">
  <%= f.button :submit, "Subscribe", input_html: {class: "btn btn-large btn-primary"}  %>
</div>
<% end %>

